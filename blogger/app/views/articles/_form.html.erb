<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
		<li><%= error %> </li>
		<% end %>
	</ul>

	<p>
		<%= f.label :title %> <br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %>
		<%= f.text_field :body%>
	</p>
	<p>
		<%= f.label :tag_list, "tags" %>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url%>
			<% end -%>
		<%= f.label :image, "add a pic" %>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>